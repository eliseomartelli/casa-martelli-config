alias: Casa Reset Simulazione Presenza
trigger:
  - platform: state
    entity_id: input_boolean.simula_presenza
    to: 'off'
action:
  - service: homeassistant.turn_off
    entity_id: automation.casa_simulazione_presenza
  - delay: '00:00:01'
  - service: homeassistant.turn_on
    entity_id: automation.casa_simulazione_presenza
