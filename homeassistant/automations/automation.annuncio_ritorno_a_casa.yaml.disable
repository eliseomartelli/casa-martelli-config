alias: Annuncio Ritorno A Casa
trigger:
  - platform: state
    entity_id:
      - device_tracker.antonella_telefono
      - device_tracker.antonio_telefono
      - device_tracker.gioele_telefono
      - device_tracker.eliseo_telefono
    to: 'home'
    for:
      minutes: 2
condition:
  - condition: template
    value_template: >
      {{ (as_timestamp(now()) | int)
       - (as_timestamp(state_attr("automation.annuncio_ritorno_a_casa", "last_triggered")) | int) > 600 }}
action:
  - service: script.annuncia
    data_template:
      bisogna_salutare: True
      meteo: True
      utente: >
        {{ trigger.from_state.name }}